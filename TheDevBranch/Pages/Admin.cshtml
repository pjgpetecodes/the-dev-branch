@page
@model TheDevBranch.Pages.AdminModel
@{
    ViewData["Title"] = "Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - The Dev Branch</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            color: #fff;
            min-height: 100vh;
        }

        .admin-container {
            max-width: 900px;
            margin: 40px auto;
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .control-section {
            margin-bottom: 40px;
            padding-bottom: 30px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .control-section:last-child {
            border-bottom: none;
        }

        h2 {
            font-size: 1.3rem;
            margin-bottom: 15px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-size: 1.1rem;
        }

        input {
            width: 100%;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.9);
            color: #333;
        }

        button {
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-right: 10px;
        }

        button:disabled {
            cursor: not-allowed;
            opacity: 0.5 !important;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
            width: 100%;
            padding: 15px;
        }

        .btn-danger:hover:not(:disabled) {
            background: #c82333;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover:not(:disabled) {
            background: #5a6268;
            transform: translateY(-2px);
        }

        .admin-verify-p {
            margin-bottom: 15px;
        }

        .admin-control-p {
            margin-bottom: 20px;
        }

        .admin-refresh-btn {
            width: auto;
            padding: 12px 20px;
            margin-bottom: 20px;
        }

        .btn-danger-inline {
            width: auto;
            padding: 12px 20px;
        }

        .no-cards-message {
            color: #fff;
        }

        .room-state {
            color: #aaa;
        }

        .delete-room-btn {
            padding: 8px 15px;
            font-size: 0.9rem;
        }

        .rooms-error {
            color: #dc3545;
        }

        .btn-info {
            background: #17a2b8;
            color: white;
            padding: 8px 15px;
            font-size: 0.9rem;
        }

        .btn-info:hover:not(:disabled) {
            background: #138496;
            transform: translateY(-2px);
        }

        #adminStatus {
            margin-top: 20px;
            text-align: center;
            padding: 12px;
            border-radius: 8px;
            display: none;
        }

        #adminStatus.success {
            background: rgba(40, 167, 69, 0.4);
        }

        #adminStatus.error {
            background: rgba(220, 53, 69, 0.4);
        }

        .rooms-list {
            margin-top: 20px;
        }

        .room-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .room-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .room-id {
            font-size: 1.2rem;
            font-weight: bold;
            color: #ffd700;
        }

        .room-info {
            font-size: 0.95rem;
            color: #ccc;
            margin-bottom: 10px;
        }

        .room-players {
            font-size: 0.9rem;
            color: #aaa;
            margin-bottom: 10px;
        }

        .room-actions {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .no-rooms {
            text-align: center;
            color: #aaa;
            padding: 20px;
        }

        .status-message {
            margin-top: 15px;
            text-align: center;
            padding: 12px;
            border-radius: 8px;
        }

        .status-message.success {
            background: rgba(40, 167, 69, 0.4);
        }

        .status-message.error {
            background: rgba(220, 53, 69, 0.4);
        }

        .key-verification {
            background: rgba(255, 193, 7, 0.2);
            border: 2px solid #ffc107;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
            text-align: center;
        }

        .key-verification h3 {
            margin-bottom: 15px;
            color: #ffc107;
        }

        .key-input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 10px;
        }

        .key-input-group input {
            flex: 1;
        }

        .key-input-group button {
            width: auto;
            padding: 12px 20px;
        }

        .key-verified {
            background: rgba(40, 167, 69, 0.2);
            border: 2px solid #28a745;
            color: #28a745;
            padding: 10px;
            border-radius: 8px;
            text-align: center;
        }

        .hidden {
            display: none !important;
        }

        .disabled-overlay {
            opacity: 0.5;
            pointer-events: none;
        }

        /* Tab Styles */
        .tabs-header {
            display: flex;
            gap: 10px;
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
            margin-bottom: 30px;
        }

        .tab-button {
            padding: 12px 20px;
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: #fff;
            cursor: pointer;
            font-size: 1rem;
            font-weight: bold;
            border-bottom: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .tab-button:hover {
            background: rgba(255, 255, 255, 0.15);
        }

        .tab-button.active {
            background: rgba(255, 255, 255, 0.2);
            border-bottom-color: #00d4ff;
        }

        .tab-content {
            display: none;
        }

        .tab-content.active {
            display: block !important;
        }

        textarea {
            width: 100%;
            min-height: 300px;
            padding: 12px;
            border: none;
            border-radius: 8px;
            font-family: 'Courier New', monospace;
            font-size: 0.95rem;
            background: rgba(255, 255, 255, 0.9);
            color: #333;
            resize: vertical;
            box-sizing: border-box;
        }

        .card-editor-section {
            margin-bottom: 30px;
        }

        .card-editor-label {
            font-size: 1.1rem;
            margin-bottom: 10px;
            display: block;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn-success {
            background: #28a745;
            color: white;
            flex: 1;
        }

        .btn-success:hover:not(:disabled) {
            background: #218838;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.4);
        }

        .btn-warning {
            background: #ffc107;
            color: #333;
            flex: 1;
        }

        .btn-warning:hover:not(:disabled) {
            background: #e0a800;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.4);
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <h1>Admin Panel</h1>
        
        <!-- Key Verification Section -->
        <div class="key-verification" id="keyVerification">
            <h3>Admin Key Required</h3>
            <p class="admin-verify-p">Enter your admin key to access room management.</p>
            <div class="key-input-group">
                <input type="password" id="adminKey" placeholder="Enter admin key" />
                <button class="btn-danger" onclick="verifyAdminKey()">Verify</button>
            </div>
            <div id="keyStatus"></div>
        </div>

        <div id="keyVerified" class="hidden key-verified">‚úì Key verified. You can now manage rooms.</div>
        
        <!-- All content wrapped in a container that gets hidden until key is verified -->
        <div id="adminContent" class="hidden">
        
        <!-- Tabs Header -->
        <div class="tabs-header">
            <button class="tab-button active" onclick="switchTab('rooms')">üè† Room Admin</button>
            <button class="tab-button" onclick="switchTab('cards')">üé¥ Card Admin</button>
        </div>

        <!-- Room Admin Tab -->
        <div id="rooms-tab" class="tab-content active">
        
        <!-- Clear All Rooms Section -->
        <div class="control-section">
            <h2>Clear All Rooms</h2>
            <p class="admin-control-p">This will remove all active rooms from the system.</p>
            
            <button class="btn-danger" onclick="clearAllRooms()" id="clearAllBtn" disabled>Clear All Rooms</button>
            
            <div id="clearStatus" class="status-message"></div>
        </div>

        <!-- Active Rooms Section -->
        <div class="control-section">
            <h2>Active Rooms</h2>
            <p class="admin-control-p">Manage individual rooms or view their details.</p>
            
            <button class="btn-secondary admin-refresh-btn" onclick="loadRooms()" id="refreshBtn" disabled>Refresh Rooms</button>
            
            <div class="rooms-list" id="roomsList">
                <div class="no-rooms">Loading rooms...</div>
            </div>
        </div>
        
        </div>

        <!-- Card Admin Tab -->
        <div id="cards-tab" class="tab-content hidden">
        
        <div class="control-section">
            <h2>Manage Cards</h2>
            <p class="admin-control-p">Edit black and white cards. Changes persist in your browser and survive app restarts. Click "Reset to Default" to revert to original cards.</p>
            
            <div class="card-editor-section">
                <label class="card-editor-label">Black Cards (one per line, use ____ for blanks being filled):</label>
                <textarea id="blackCardsTextarea" placeholder="Black card text goes here..."></textarea>
                <div class="button-group">
                    <button class="btn btn-success" onclick="saveBlackCards()">Save Black Cards</button>
                    <button class="btn btn-warning" onclick="resetBlackCards()">Reset to Default</button>
                </div>
                <div id="blackCardsStatus" class="status-message"></div>
            </div>
            
            <div class="card-editor-section">
                <label class="card-editor-label">White Cards (one per line):</label>
                <textarea id="whiteCardsTextarea" placeholder="White card text goes here..."></textarea>
                <div class="button-group">
                    <button class="btn btn-success" onclick="saveWhiteCards()">Save White Cards</button>
                    <button class="btn btn-warning" onclick="resetWhiteCards()">Reset to Default</button>
                </div>
                <div id="whiteCardsStatus" class="status-message"></div>
            </div>
        </div>
        
        </div>
        
        </div>
    </div>

    <script>
        const adminKeyInput = document.getElementById('adminKey');
        let adminKeyVerified = false;
        let originalBlackCards = '';
        let originalWhiteCards = '';

        // Allow Enter key to verify
        adminKeyInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                verifyAdminKey();
            }
        });

        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName + '-tab').classList.add('active');
            
            // Mark the clicked button as active
            document.querySelector(`[onclick="switchTab('${tabName}')"]`).classList.add('active');
            
            // Load cards when switching to cards tab
            if (tabName === 'cards' && !originalBlackCards) {
                loadCardsForEditing();
            }
        }

        async function loadCardsForEditing() {
            try {
                const response = await fetch(`/admin/cards?key=${encodeURIComponent(adminKeyInput.value)}`);
                if (!response.ok) throw new Error('Failed to load cards');
                
                const data = await response.json();
                
                // Format black cards with pick count
                const blackCardsText = data.blackCards.map(c => c.text).join('\n');
                const whiteCardsText = data.whiteCards.map(c => c.text).join('\n');
                
                // Store originals
                originalBlackCards = blackCardsText;
                originalWhiteCards = whiteCardsText;
                
                // Set localStorage
                localStorage.setItem('dal_blackCards_original', blackCardsText);
                localStorage.setItem('dal_whiteCards_original', whiteCardsText);
                
                // Load any overrides from localStorage
                const savedBlackCards = localStorage.getItem('dal_blackCards');
                const savedWhiteCards = localStorage.getItem('dal_whiteCards');
                
                document.getElementById('blackCardsTextarea').value = savedBlackCards || blackCardsText;
                document.getElementById('whiteCardsTextarea').value = savedWhiteCards || whiteCardsText;
            } catch (err) {
                console.error('Error loading cards:', err);
                showStatus('blackCardsStatus', 'Error loading cards', 'error');
            }
        }

        async function saveBlackCards() {
            const blackCardsText = document.getElementById('blackCardsTextarea').value;
            const whiteCardsText = document.getElementById('whiteCardsTextarea').value;
            
            const blackCards = blackCardsText.split('\n')
                .filter(line => line.trim())
                .map(text => ({
                    text: text.trim(),
                    pickCount: (text.match(/_+/g) || []).length || 1
                }));
            
            const whiteCards = whiteCardsText.split('\n')
                .filter(line => line.trim())
                .map(text => ({ text: text.trim() }));
            
            try {
                const response = await fetch(`/admin/cards?key=${encodeURIComponent(adminKeyInput.value)}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ blackCards, whiteCards })
                });
                
                if (!response.ok) throw new Error('Failed to save cards');
                
                const result = await response.json();
                
                // Save to localStorage
                localStorage.setItem('dal_blackCards', blackCardsText);
                localStorage.setItem('dal_whiteCards', whiteCardsText);
                
                showStatus('blackCardsStatus', `Saved ${result.blackCount} black cards!`, 'success');
            } catch (err) {
                console.error('Error saving black cards:', err);
                showStatus('blackCardsStatus', 'Error saving cards', 'error');
            }
        }

        async function saveWhiteCards() {
            // Save as part of black cards to maintain consistency
            await saveBlackCards();
        }

        function resetBlackCards() {
            if (originalBlackCards && confirm('Reset black cards to defaults?')) {
                document.getElementById('blackCardsTextarea').value = originalBlackCards;
                localStorage.removeItem('dal_blackCards');
                showStatus('blackCardsStatus', 'Reset to defaults (not saved)', 'success');
            }
        }

        function resetWhiteCards() {
            if (originalWhiteCards && confirm('Reset white cards to defaults?')) {
                document.getElementById('whiteCardsTextarea').value = originalWhiteCards;
                localStorage.removeItem('dal_whiteCards');
                showStatus('whiteCardsStatus', 'Reset to defaults (not saved)', 'success');
            }
        }

        function showStatus(elementId, message, type) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            element.className = `status-message ${type}`;
            element.style.display = 'block';
            setTimeout(() => element.style.display = 'none', 3000);
        }

        function hideStatusMessageAfterDelay(statusElement, delay = 3000) {
            setTimeout(() => {
                statusElement.classList.add('fade-out');
                setTimeout(() => {
                    statusElement.style.display = 'none';
                    statusElement.classList.remove('fade-out');
                }, 500);
            }, delay);
        }

        async function verifyAdminKey() {
            const key = adminKeyInput.value.trim();
            const keyStatus = document.getElementById('keyStatus');
            keyStatus.style.display = 'none';
            keyStatus.className = '';

            if (!key) {
                keyStatus.textContent = 'Please enter an admin key';
                keyStatus.className = 'status-message error';
                keyStatus.style.display = 'block';
                hideStatusMessageAfterDelay(keyStatus);
                return;
            }

            try {
                const response = await fetch(`/admin/rooms?key=${encodeURIComponent(key)}`);

                if (!response.ok) {
                    if (response.status === 401) {
                        keyStatus.textContent = 'Invalid admin key';
                    } else {
                        keyStatus.textContent = 'Failed to verify key';
                    }
                    keyStatus.className = 'status-message error';
                    keyStatus.style.display = 'block';
                    hideStatusMessageAfterDelay(keyStatus);
                    adminKeyVerified = false;
                    return;
                }

                // Key is valid
                adminKeyVerified = true;
                document.getElementById('keyVerification').classList.add('hidden');
                document.getElementById('keyVerified').classList.remove('hidden');
                document.getElementById('adminContent').classList.remove('hidden');
                document.getElementById('clearAllBtn').disabled = false;
                document.getElementById('refreshBtn').disabled = false;
                
                loadRooms();
            } catch (err) {
                keyStatus.textContent = 'Error verifying key';
                keyStatus.className = 'status-message error';
                keyStatus.style.display = 'block';
                hideStatusMessageAfterDelay(keyStatus);
                console.error(err);
            }
        }

        async function loadRooms() {
            if (!adminKeyVerified) return;
            
            try {
                const url = `/admin/rooms?key=${encodeURIComponent(adminKeyInput.value)}`;
                const response = await fetch(url);

                if (!response.ok) {
                    if (response.status === 401) {
                        showRoomsError('Unauthorized. Check admin key.');
                    } else {
                        showRoomsError('Failed to load rooms.');
                    }
                    return;
                }

                const result = await response.json();
                displayRooms(result.rooms);
            } catch (err) {
                showRoomsError('Failed to load rooms.');
                console.error(err);
            }
        }

        function displayRooms(rooms) {
            const roomsList = document.getElementById('roomsList');
            
            if (!rooms || rooms.length === 0) {
                roomsList.innerHTML = '<div class="no-rooms">No active rooms</div>';
                return;
            }

            roomsList.innerHTML = rooms.map(room => `
                <div class="room-card">
                    <div class="room-card-header">
                        <div class="room-id">Room: ${room.roomId}</div>
                        <div class="room-state">State: ${room.state}</div>
                    </div>
                    <div class="room-info">
                        Round: ${room.currentRound} / ${room.totalRounds}
                    </div>
                    <div class="room-players">
                        Players: ${room.playerCount}
                        ${room.players.length > 0 ? `<br/>${room.players.map(p => `${p.name} (${p.score})`).join(', ')}` : ''}
                    </div>
                    <div class="room-actions">
                        <button class="btn-info" onclick="copyRoomLink('${room.roomId}')">Copy Join Link</button>
                        <button class="btn-danger delete-room-btn" onclick="deleteRoom('${room.roomId}')">Delete Room</button>
                    </div>
                </div>
            `).join('');
        }

        function showRoomsError(message) {
            const roomsList = document.getElementById('roomsList');
            roomsList.innerHTML = `<div class="no-rooms rooms-error">${message}</div>`;
        }

        async function clearAllRooms() {
            const key = adminKeyInput.value.trim();
            const status = document.getElementById('clearStatus');
            status.style.display = 'none';
            status.className = 'status-message';

            if (!confirm('Are you sure you want to clear ALL rooms? This cannot be undone.')) {
                return;
            }

            try {
                const url = `/admin/rooms/clear?key=${encodeURIComponent(key)}`;
                const response = await fetch(url, { method: 'POST' });

                if (!response.ok) {
                    const message = response.status === 401 ? 'Unauthorized. Check admin key.' : 'Failed to clear rooms.';
                    throw new Error(message);
                }

                const result = await response.json();
                status.textContent = `Cleared ${result.cleared} room(s).`;
                status.className = 'status-message success';
                status.style.display = 'block';
                hideStatusMessageAfterDelay(status);
                loadRooms();
            } catch (err) {
                status.textContent = err.message || 'Failed to clear rooms.';
                status.className = 'status-message error';
                status.style.display = 'block';
                hideStatusMessageAfterDelay(status);
            }
        }

        function copyRoomLink(roomId) {
            const link = `${window.location.origin}/?room=${roomId}`;
            navigator.clipboard.writeText(link).then(() => {
                alert('Join link copied: ' + link);
            }).catch(() => {
                alert('Failed to copy link');
            });
        }

        async function deleteRoom(roomId) {
            if (!confirm(`Are you sure you want to delete room ${roomId}?`)) {
                return;
            }

            try {
                const key = adminKeyInput.value.trim();
                const url = `/admin/rooms/${roomId}/delete?key=${encodeURIComponent(key)}`;
                const response = await fetch(url, { method: 'POST' });

                if (!response.ok) {
                    if (response.status === 401) {
                        alert('Unauthorized. Check admin key.');
                    } else {
                        alert('Failed to delete room.');
                    }
                    return;
                }

                loadRooms();
            } catch (err) {
                alert('Failed to delete room.');
                console.error(err);
            }
        }

        // Refresh rooms every 5 seconds
        setInterval(() => {
            if (adminKeyVerified) {
                loadRooms();
            }
        }, 5000);
    </script>
</body>
</html>
